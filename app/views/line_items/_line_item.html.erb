<% if line_item == @current_item %>
  <tr id="current_item">
<% else %>
  <tr>
<% end %>
  <td class="item_quantity"><%= line_item.quantity %> &times; </td>
  <td class="item_title"><%= line_item.product.title %></td>
  <td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
  <td class="remove_item"> 
    <%= button_to 'x', line_item, method: :delete %> 
  </td>
</tr>
